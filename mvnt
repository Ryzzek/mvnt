/\ \/\ \/\ \ \ \_/ |/\ \/\ \ \ \_ 
\ \_\ \_\ \_\ \___/ \ \_\ \_\ \__\
 \/_/\/_/\/_/\/__/   \/_/\/_/\/__/
END_CAT
	echo
	printf "%s\n" "Movie Night"
	printf "%s\n" "Author: Jaok Tatsu"
	printf "%s\n" "ðŸŽ¥ Enjoy ;)"
	echo
}

